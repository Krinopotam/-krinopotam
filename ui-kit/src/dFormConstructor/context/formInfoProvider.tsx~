import {FormInfo} from '@src/dFormConstructor/fields/formInfo';
import React, {createContext, FC, PropsWithChildren, useState} from 'react';

export interface IFormInfoContext {
    formInfo: FormInfo;
    setFormInfo:(ormInfo: FormInfo)=>void
}

const FormInfoProvider = createContext<IFormInfoContext>(null);

const FormInfoProvider = ({children}: PropsWithChildren) => {
    const [formInfo, setFormInfo] = useState<IFormInfoContext>();

    const value = {formInfo: FormInfo};

    return <FormInfoProvider.Provider value={value}>{children}</FormInfoProvider.Provider>;
};
